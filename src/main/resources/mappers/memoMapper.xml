<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.memo.mapper.MemoMapper">
 	<insert id="insertMemo">
 		INSERT INTO `memo`
 		(
	 		`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 			
 		)
 	</insert>
 
 	<select id="selectMemoListByuserId" resultType="com.project.memo.domain.Memo">
 		SELECT
 			`id`
 			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`memo`
		WHERE
			`userId` = #{userId}		
 	</select>
 	
 	<select id="selectMemoByMemoIdUserId" resultType="com.project.memo.domain.Memo">
 		SELECT
 			`id`
 			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`memo`
		WHERE
			`id` = #{memoId}
	 	AND `userId` = #{userId}
 	</select>
 	
 	
 	<update id="updateMemoByMemoId">
 		UPDATE `memo`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			<if test="imagePath != null">  <!-- 너무 중요!!!! 이미지가 있을때만 바꿔줌 -->
 			, `imagePath` = #{imagePath}
 			</if>
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{memoId}	
 	</update>
 	
 </mapper>