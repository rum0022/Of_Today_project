<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.memo.mapper.MemoMapper">
 	<insert id="insertMemo">
 		INSERT INTO `memo`
 		(
	 		`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 			
 		)
 	</insert>
 
 	<select id="selectMemoByuserId" resultType="com.project.memo.domain.Memo">
 		SELECT
 			`id`
 			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`memo`
		WHERE
			`userId` = #{userId}		
 	</select>
 </mapper>